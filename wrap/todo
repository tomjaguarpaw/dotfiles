set -e

cd $HOME/TODO
jmacs -autoindent --wordwrap TODO
git -c interactive.singlekey=true add --patch
git commit -m "Generic TODO edit" || true
git fetch origin
git -c merge.conflictStyle=diff3 rebase origin/master
git push
echo -n "Exiting " && sleep 0.05 && echo -n "." && sleep 0.05 && echo -n "." && sleep 0.05 && echo -n "." && sleep 0.05

